            left: 100%;
            margin-left: 10px;
            color: red;
            font-size: 12px;
            text-align: left;
            white-space: nowrap;
        }

        .form-textarea {
            width: 100%;
            padding: 8px;
            font-size: 14px;
            border: 1px solid #ddd;
            border-radius: 4px;
            resize: vertical;
        }

        .form-textarea.error {
            border-color: red;
        }

        .submit-button {
            display: block;
